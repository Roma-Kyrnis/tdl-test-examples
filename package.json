{
  "name": "advertisement-telegram-bot",
  "version": "1.0.0",
  "main": "src/main.ts",
  "type": "module",
  "scripts": {
    "clean": "rm -rf dist node_modules",
    "lint": "eslint 'src/**/*.ts' && prettier --check 'src/**/*.ts'",
    "build:prod": "NODE_ENV=prod tsup",
    "build:dev": "NODE_ENV=dev tsup",
    "build:swc": "swc --out-dir dist --delete-dir-on-start src",
    "build:watch": "swc --watch -d dist src/",
    "start:dev": "NODE_ENV=dev node --loader @swc-node/register/esm src/main.ts",
    "start:dev:tsup": "NODE_ENV=dev tsup && NODE_ENV=dev node dist/main.js",
    "start:dev:watch": "nodemon --ext ts --watch src --exec \"NODE_ENV=dev tsup && NODE_ENV=dev node dist/main.js \"",
    "start:dev:watch:swc": "nodemon --ext ts --watch src --exec \"NODE_ENV=dev npm run build && npm run start:prod\"",
    "start:prod": "NODE_ENV=prod node --max_old_space_size=482 dist/main.js",
    "migration:run": "NODE_ENV=dev node --loader @swc-node/register/esm src/db/sqlite/migrate.ts run",
    "migration:show": "NODE_ENV=dev node --loader @swc-node/register/esm src/db/sqlite/migrate.ts show",
    "migration:reverse": "NODE_ENV=dev node --loader @swc-node/register/esm src/db/sqlite/migrate.ts reverse",
    "migration:run:prod": "NODE_ENV=prod node --max_old_space_size=482 --loader @swc-node/register/esm dist/db/sqlite/migrate.js run",
    "migration:show:prod": "NODE_ENV=prod node --loader @swc-node/register/esm dist/db/sqlite/migrate.js show",
    "migration:reverse:prod": "NODE_ENV=prod node --loader @swc-node/register/esm dist/db/sqlite/migrate.js reverse",
    "docker:entrypoint": "npm run migration:run:prod && DEBUG='grammy*' UV_THREADPOOL_SIZE=20 npm run start:prod",
    "frontend:build:public": "cd packages/frontend && npm i && npx vite build --outDir ../../public/ && rm -rf node_modules"
  },
  "license": "MIT",
  "engines": {
    "node": ">=20.10.0"
  },
  "packageManager": "npm@10.2.5",
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^1.5.4",
    "@swc-node/register": "^1.6.8",
    "@swc/cli": "^0.1.64",
    "@swc/core": "^1.3.105",
    "@swc/plugin-transform-imports": "^1.5.114",
    "@types/debug": "^4.1.12",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chokidar": "^3.5.3",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-editorconfig": "^4.0.3",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.2.4",
    "simple-update-notifier": "^2.0.0",
    "ts-essentials": "^9.4.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@grammyjs/conversations": "^1.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "debug": "^4.3.4",
    "dotenv": "^16.3.2",
    "eventemitter3": "^5.0.1",
    "grammy": "^1.20.3",
    "node-addon-api": "^7.1.0",
    "reflect-metadata": "^0.2.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "tdl": "^7.4.0"
  }
}
